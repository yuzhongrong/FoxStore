<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/publishtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布时间14:44"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/dp5"
        android:layout_marginTop="@dimen/dp14"
        android:elevation="@dimen/dp0"
        android:padding="@dimen/dp13"

        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <ImageView
                android:id="@+id/bigimg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp180"
                android:src="@drawable/pic_large"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/storename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp15"
                android:textColor="@color/color_2a2a33"
                android:text="币乎第100篇：深耕翻译的原因"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:maxLines="2"
                android:ellipsize="end"


                />

            <TextView
                android:id="@+id/keycord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp15"
                android:textColor="@color/color_999999"
                android:hint="关键词"
                android:textColorHint="@color/c_FC001F"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp18"
                android:maxLines="3"
                android:ellipsize="end"

                />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp15"
                android:textColor="@color/color_999999"
                android:hint="价格"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp18"
                android:maxLines="3"
                android:ellipsize="end"

                />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:padding="@dimen/dp5"
                android:layout_marginTop="@dimen/dp10"
                android:visibility="gone"



                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2265.32"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp30"
                    android:drawableLeft="@drawable/money"
                    android:drawablePadding="@dimen/dp4"
                    />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1598"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/good"
                    android:drawablePadding="@dimen/dp4"


                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="151"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp30"
                    android:drawableLeft="@drawable/comment1"
                    android:drawablePadding="@dimen/dp4"


                    />


            </RelativeLayout>


        </LinearLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>