<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/publishtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布时间14:44"
        android:layout_gravity="center_horizontal"
        />

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp14"
    android:layout_marginRight="@dimen/dp14"
    android:layout_marginTop="@dimen/dp14"
    android:elevation="@dimen/dp0"
    android:layout_marginBottom="@dimen/dp5"
    android:padding="@dimen/dp13"

    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <ImageView
            android:id="@+id/bigimg"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:src="@drawable/pic_small"
            android:scaleType="fitXY"

            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp15"
            android:textColor="@color/color_2a2a33"
            android:text="店铺"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/bigimg"


            />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp15"
            android:textColor="@color/color_999999"
            android:text="币券第一个app"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp18"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/bigimg"

            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/title"
            android:layout_below="@+id/subtitle"
            android:layout_marginTop="@dimen/dp18"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="价格"


            android:textColor="@color/color_999999"
            android:textSize="@dimen/dp15" />







        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:padding="@dimen/dp5"
            android:layout_marginTop="@dimen/dp10"
            android:visibility="gone"



            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2265.32"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp30"
                android:drawableLeft="@drawable/money"
                android:drawablePadding="@dimen/dp4"
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1598"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/good"
                android:drawablePadding="@dimen/dp4"


                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="151"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp30"
                android:drawableLeft="@drawable/comment1"
                android:drawablePadding="@dimen/dp4"


                />


        </RelativeLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_marginLeft="@dimen/dp14"
        android:layout_marginRight="@dimen/dp14"
        android:background="@drawable/seletor_shap_round_2c97de"
        android:text="邀请(59s)"
        android:textSize="@dimen/dp15"
        android:textColor="@android:color/white"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp160"

        />

</LinearLayout>